{
  "manifest_version": 2,

  "name":        "DisneySearch",
  "version":     "1.0",
  "description": "Customizes google search engine to be Disney/Pixar themed.",


  "browser_action": {
    "default_icon": "Mickey.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://www.google.com/*"],
      "css": ["disney.css"],
      "js": ["jquery-3.2.1.min.js", "disney-script.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "activeTab",
    "pageCapture",
    "storage",
    "tabs",
    "unlimitedStorage",
    "http://www.google.com/*",
    "topSites"
  ]

}
